        --name languagetool \
        ${DOCKER_REPO_PREFIX}languagetool "$@"
}

# Usage: pyspy record -o myprofile.svg --pid 1234
pyspy() {
    docker run -it --rm \
        -v "${PWD}:/profiles" \
        --name pyspy \
        --pid host \
        --privileged \
        ${DOCKER_REPO_PREFIX}pyspy "$@"
}

memray() {
    docker run -it --rm \
        -v "${PWD}:/profiles" \
        --name memray \
        --pid host \
        --privileged \
        --cap-add=SYS_PTRACE \
        ${DOCKER_REPO_PREFIX}memray "$@"
}

pre-commit() {
    docker run -it --rm \
        -v "${PWD}:/usr/src/app" \
        --name pre-commit \
        ${DOCKER_REPO_PREFIX}pre-commit "$@"
}

poetry() {
    docker run -it --rm \
        -v "${PWD}:/usr/src/app" \
        --name poetry \
        ${DOCKER_REPO_PREFIX}poetry "$@"
}

# quay.io/iovisor/bpftrace:latest \
bpftrace() {
    docker run -ti \
        -v /usr/src:/usr/src:ro \
        -v /lib/modules/:/lib/modules:ro \
        -v /sys/kernel/debug/:/sys/kernel/debug:rw \
        --net=host --pid=host --privileged \
        ${DOCKER_REPO_PREFIX}bpftrace \
        bpftrace "$@"
}

pandoc() {
    docker run -it --rm \
        -v "${PWD}:/pandoc" \
        --name pandoc \
        ${DOCKER_REPO_PREFIX}pandoc "$@"
}
